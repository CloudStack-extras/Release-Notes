	<section>
		<title>Issues fixed in &PRODUCT; 2.2.10</title>
		<table id="tb-2210fixed" frame="all">
                        <title>Issues fixed in 2.2.10</title>
			<tgroup cols='2' align='left' colsep='1' rowsep='1'>
                            <colspec colnum="1" colwidth="1*"/>
                            <colspec colnum="2" colwidth="2*"/>
                        <thead>
